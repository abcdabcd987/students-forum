extends layout

block content
  h1 Which one is better?
  form(action="/vote", method="post")
    div.pure-g
      input(type="hidden", name="choice", id="input-choice", value="-1")

      div.choice.pure-u-1-2.center
        div.inner-box.left
          p.choice-info=first.title
          div
            input.button-xlarge.pure-button.pure-button-primary(type="submit", onclick="document.getElementById('input-choice').value='1';", value="#{first.speaker}")

      div.choice.pure-u-1-2.center
        div.inner-box.right
          p.choice-info=second.title
          div
            input.button-xlarge.pure-button.pure-button-primary(type="submit", onclick="document.getElementById('input-choice').value='2';", value="#{second.speaker}")

      div.pure-u-1-1.center#box-soso
        input.button-xlarge.pure-button.button-warning(type="submit", onclick="document.getElementById('input-choice').value='0';", value="差不多")

  hr
  a(href="/rank") See Rank
